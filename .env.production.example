# Production Environment Variables Template
# Copy this to .env in production and fill in the actual values

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/agriclip?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# Server Configuration
PORT=5000
NODE_ENV=production

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Gmail SMTP)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-specific-password
OTP_EXPIRY_MINUTES=10

# AI Model Service
MODEL_SERVICE_URL=https://your-model-service-url.railway.app

# CORS Configuration
FRONTEND_URL=https://crop-cure-chat-frontend.vercel.app/
